{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sales list</h1>

    <table>
        <thead>
        <tr>
            <th>Fecha</th>
            <th>Tipo</th>
            <th>Documento</th>
            <th>Moneda</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for sale in sales %}
            <tr>
                <td>{{ sale.emision|date('d/m/Y')}}</td>
                <td>{{ sale.docType}}</td>
                <td>{{ sale.serie }}-{{ sale.correlativo }}</td>
                <td>{{ sale.moneda }}</td>
                <td>{{ sale.total }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('productos_edit', { 'id': sale.id }) }}">Edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sale_new') }}">Create a new sale</a>
        </li>
    </ul>
{% endblock %}
