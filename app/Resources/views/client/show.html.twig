{% extends 'base.html.twig' %}

{% block body %}
    <h1>Client</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Typedoc</th>
                <td>{{ client.typeDoc }}</td>
            </tr>
            <tr>
                <th>Document</th>
                <td>{{ client.document }}</td>
            </tr>
            <tr>
                <th>Namerzs</th>
                <td>{{ client.nameRzs }}</td>
            </tr>
            <tr>
                <th>Comercialname</th>
                <td>{{ client.comercialName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ client.address }}</td>
            </tr>
            <tr>
                <th>Observation</th>
                <td>{{ client.observation }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ client.userId }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('client_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('client_edit', { 'id': client.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
